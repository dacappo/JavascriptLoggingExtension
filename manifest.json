{
  "name": "Javascript Logging",
  "description": "This extension logges various Javascript API calls wihtin websites.",
  "version": "0.2",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts" : [

      {
         "matches" : ["http://*/*","https://*/*"],
         "js" : ["content.js"],
         "run_at" : "document_start",
         "all_frames" : true
      }
   ],

   
   "permissions" : [
      "tabs", "http://*/*", "https://*/*"
   ],
   
   "web_accessible_resources": ["observe.js"]
  
}
